<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui" xmlns:b="http://bootsfaces.net/ui"
	template="/template/index.xhtml">
	<ui:define name="content">
		<section class="section-padding">
			<div class="container-fluid">
				<h:form enctype="multipart/form-data">
					<h:graphicImage value="resources/images/rojos.jpg" width="100%"
						height="4%" />
					<b:well>
						<br />
						<p:ajaxStatus onstart="PF('statusDialog').show()"
							oncomplete="PF('statusDialog').hide()" />
						<div class="lineaCustome">
							<h2>#{texto.cargapdf}</h2>
						</div>
						<p:messages id="messages" showDetail="true" closable="true" />
						<br />
						<b:panelGrid colSpans="2,4,5,1">
							<h:outputText />
							<b:selectOneMenu id="tipopdf" label="#{texto.tipo}:"
								value="#{beanPDF.tipo}" style="width:150px">
								<f:selectItem itemLabel="#{texto.consulSeleccione}"
									itemValue="-1" />
								<f:selectItem itemLabel="#{texto.proteccion}"
									itemValue="proteccion" />
								<f:selectItem itemLabel="#{texto.productos}"
									itemValue="productos" />
								<f:selectItem itemLabel="#{texto.polviaje}" itemValue="polviaje" />
								<f:selectItem itemLabel="#{texto.polcaja}" itemValue="polcaja" />
								<f:selectItem itemLabel="#{texto.polvestimenta}"
									itemValue="polvestimenta" />
								<f:selectItem itemLabel="#{texto.polactivo}"
									itemValue="polactivo" />
								<f:selectItem itemLabel="#{texto.polconvivencia}"
									itemValue="polconvivencia" />


							</b:selectOneMenu>


							<p:fileUpload cancelLabel="#{texto.tablaImagenesCan}"
								label="#{texto.tablaImagenesBus}"
								uploadLabel="#{texto.tablaImagenesSub}"
								fileUploadListener="#{beanPDF.cargapdf}"
								fileLimitMessage="#{texto.noticiaImgFileLimit1}"
								invalidFileMessage="#{texto.noticiaImgInvalidFile}"
								invalidSizeMessage="#{texto.noticiaImgInvalidSize}"
								mode="advanced" multiple="false" sizeLimit="200000"
								fileLimit="1" allowTypes="/(\.|\/)(pdf)$/" />
							<h:outputText />



						</b:panelGrid>






					</b:well>
				</h:form>
			</div>
		</section>
	</ui:define>
</ui:composition>